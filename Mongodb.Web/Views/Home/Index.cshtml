@model List<Mongodb.Web.Models.Book>
@{
    ViewData["Title"] = "Home Page";
}


<div class="row">
    <div class="col-md-12">
        <div class="col-md-6">
            <h1>List of Books</h1>
        </div>
        <div class="col-md-6">
            <button type="button" class="btn btn-light">
                <a asp-controller="Home" asp-action="Insert">
                    Add New Book
                </a>
            </button>
        </div>
    </div>
    
</div>

<h2>@TempData["Message"]</h2>

<div class="row">
    <div class="col-md-12">
        <table class="table table-striped">
            <thead>
                <tr scope="col">
                    <th>Id</th>
                    <th>BookName</th>
                    <th>Author</th>
                    <th>Category</th>
                    <th>Price</th>
                    <th>Edit</th>
                    <th>Delete</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Id</td>
                        <td>@item.BookName</td>
                        <td>@item.Author</td>
                        <td>@item.Category</td>
                        <td>@item.Price</td>
                        <td>
                            <a asp-controller="Home" asp-action="Update"
                               asp-route-id="@item.Id">Edit</a>
                        </td>
                        <td>
                            <a asp-controller="Home" asp-action="ConfirmDelete"
                               asp-route-id="@item.Id">Delete</a>
                        </td>

                    </tr>
                }
            </tbody>
        </table>
    </div>
 
</div>
   
